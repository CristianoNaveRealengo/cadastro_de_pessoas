{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2015",
    "lib": ["DOM", "ES2017"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": false,
    "removeComments": false,
    "noEmitOnError": false
  },
  "include": [
    "script.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}