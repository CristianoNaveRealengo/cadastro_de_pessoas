rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==============================================
    // REGRAS TEMPORÁRIAS PARA TESTE
    // ==============================================
    // Use estas regras temporariamente para testar se o sistema funciona
    // Depois substitua pelas regras de segurança apropriadas
    
    match /records/{document} {
      // TEMPORÁRIO: Permitir acesso para usuários autenticados
      // ⚠️ ATENÇÃO: Estas regras são permissivas demais para produção!
      allow read, write: if request.auth != null;
    }
    
    // Outras coleções também permissivas temporariamente
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

// ==============================================
// INSTRUÇÕES DE USO:
// ==============================================
// 1. Copie estas regras para o Console do Firebase
// 2. Teste se o sistema funciona
// 3. Se funcionar, substitua pelas regras de segurança do arquivo firestore.rules
// 4. Escolha uma das opções de segurança (whitelist, propriedade, ou híbrida)