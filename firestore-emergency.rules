rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==============================================
    // REGRAS TEMPORÁRIAS PARA RESOLVER ERRO DE PERMISSÃO
    // ==============================================
    // ⚠️ ESTAS REGRAS SÃO TEMPORÁRIAS E PERMISSIVAS
    // Use apenas para resolver o erro atual
    
    match /records/{document} {
      // TEMPORÁRIO: Permitir acesso para qualquer usuário autenticado
      allow read, write: if request.auth != null;
    }
    
    match /settings/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /logs/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Permitir acesso a qualquer coleção para usuários autenticados
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

